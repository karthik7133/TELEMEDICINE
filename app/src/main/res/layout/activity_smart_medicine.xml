<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background7"
    android:gravity="center"
    android:padding="16dp">

    <EditText
        android:id="@+id/symptomsInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter symptoms (comma separated)"
        android:textColorHint="@color/white"
        android:inputType="text"/>

    <Button
        android:id="@+id/suggestButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backgroundTint="@null"
        android:background="@drawable/gradientbtn2"
        android:textColor="@color/white"
        android:text="Suggest Medicine"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/resultView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Suggested medicines will appear here"
        android:textSize="20sp"
        android:textColor="#FFFDD0"
        android:paddingTop="10dp"/>
</LinearLayout>

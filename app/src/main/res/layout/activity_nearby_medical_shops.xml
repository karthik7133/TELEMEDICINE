<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:padding="10dp"
    android:background="@drawable/gradient_background7">

    <!-- Search Bar -->
    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Search for medical stores..."
        android:textColorHint="@color/black"
        android:padding="10dp"
        android:background="@drawable/text_gradient_background"
        android:textSize="16sp"/>

    <!-- RecyclerView for Medical Shops -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/medicalStoresRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:scrollbars="vertical"/>

    <!-- Floating Action Button for Nearest Shop -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_nearest_store"
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:src="@drawable/baseline_add_location_24"
        android:backgroundTint="@color/neon_green"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"/>

</LinearLayout>
